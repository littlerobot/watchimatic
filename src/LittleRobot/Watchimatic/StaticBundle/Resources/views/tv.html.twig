{% extends '::base.html.twig' %}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Trending TV</h1>
        </div>
        {% for show in shows %}
            {{ dump(show) }}
            <div class="row show">
                <div class="col-md-2">
                    <img src="{{ show.images.poster }}" class="img-responsive" />
                </div>
                <div class="col-md-10">
                    <h2>{{ show.title }}</h2>
                    <p>{{ show.overview }}</p>
                    <ul class="list-unstyled">
                        <li><span class="glyphicon glyphicon-calendar"></span> {{ show.year }}</li>
                        <li><span class="glyphicon glyphicon-time"></span> {{ show.runtime }}</li>
                        <li>
                            <span class="glyphicon glyphicon-tag"></span>
                            {% for genre in show.genres %}
                                <span class="label label-default">{{ genre }}</span>
                            {% endfor %}
                        <li><span class="glyphicon glyphicon-heart"></span> {{ show.ratings.percentage }}%</li>
                        <li><span class="glyphicon glyphicon-globe"></span>
                            <a href="{{ show.url }}">trakt</a> &middot;
                            <a href="http://www.imdb.com/title/{{ show.imdb_id }}/">IMDB</a> &middot;
                            <a href="http://thetvdb.com/index.php?tab=series&id={{ show.tvdb_id }}">TheTVDB</a> &middot;
                            <a href="http://www.tvrage.com/id-{{ show.tvrage_id }}">TVRage</a>
                        </li>
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}